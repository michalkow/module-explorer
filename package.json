{
  "name": "module-explorer",
  "displayName": "Module Explorer",
  "description": "Navigate your codebase by logical modules rather than nested folders",
  "version": "0.0.1",
  "publisher": "mnkow",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.99.3"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Visualization"
  ],
  "keywords": ["modules", "explorer", "monorepo", "navigation", "workspace"],
  "repository": {
    "type": "git",
    "url": "https://github.com/michalkow/module-explorer"
  },
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "modulesExplorer",
          "name": "Modules"
        }
      ]
    },
    "configuration": {
      "title": "Modules Explorer",
      "properties": {
        "modulesExplorer.directories": {
          "type": "array",
          "default": [],
          "description": "Array of absolute paths or glob patterns that point to folders with module directories.",
          "items": {
            "type": "string"
          }
        },
        "modulesExplorer.modulesFolder": {
          "type": "string",
          "default": "modules",
          "description": "Name of the modules directory."
        },
        "modulesExplorer.filePattern": {
          "type": "string",
          "default": "*.*",
          "description": "Glob pattern for files to show inside a module."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "fast-glob": "^3.3.3"
  }
}
